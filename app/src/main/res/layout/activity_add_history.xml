<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddHistory">

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/txt1"
            android:id="@+id/setTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Put Your Trip TItle"/>
    </LinearLayout>

    <DatePicker
        android:layout_centerHorizontal="true"
        android:id="@+id/dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_gravity="center"
        android:layout_below="@id/linear2" >
    </DatePicker>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@id/dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/setStart"
            android:text="Start Day Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/setEnd"
            android:text="End Day Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear3"
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Image" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt2"
        android:id="@+id/setImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chopper"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/setImg"
        android:id="@+id/addHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD HISTORY"/>

</RelativeLayout>